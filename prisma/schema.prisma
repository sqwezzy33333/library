generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @db.Uuid
  login     String
  password  String
  version   Int
  createdAt String
  updatedAt String
}

model Track {
  id             String           @id @db.Uuid
  name           String
  artist         Artist?          @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId       String?
  album          Album?           @relation(fields: [albumId], references: [id], onDelete: SetNull)
  albumId        String?
  duration       Int
  Track_Favorite Track_Favorite[]
}

model Artist {
  id              String            @id @unique @db.Uuid
  name            String
  grammy          Boolean
  Track           Track[]
  Album           Album[]
  Artist_Favorite Artist_Favorite[]
}

model Album {
  id             String           @id @db.Uuid
  name           String
  year           Int
  artist         Artist?          @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId       String?
  Album_Favorite Album_Favorite[]
  Track          Track[]
}

model Album_Favorite {
  album Album  @relation(fields: [id], references: [id])
  id    String @id @db.Uuid
}

model Track_Favorite {
  track Track  @relation(fields: [id], references: [id])
  id    String @id @db.Uuid
}

model Artist_Favorite {
  artist Artist @relation(fields: [id], references: [id])
  id     String @id @db.Uuid
}
