generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @db.Uuid
  login     String
  password  String
  version   Int
  createdAt String
  updatedAt String
}

model Track {
  id       String  @id @db.Uuid
  name     String
  artist   Artist? @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId String? @db.Uuid
  album    Album?  @relation(fields: [albumId], references: [id], onDelete: SetNull)
  albumId  String? @db.Uuid
  duration Int
  isFav    Boolean
}

model Artist {
  id     String  @id @unique @db.Uuid
  name   String
  grammy Boolean
  isFav  Boolean
  Track  Track[]
  Album  Album[]
}

model Album {
  id       String  @id @db.Uuid
  name     String
  year     Int
  isFav    Boolean
  artist   Artist? @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId String? @db.Uuid
  Track    Track[]
}
